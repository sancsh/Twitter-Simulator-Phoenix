
<div class = "loginBox">
    <h1>Welcome to Twitter!</h1>
    <div class="container">
        <div class="card card-container">
            
                <input type="text" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
                <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" id="loginButton">Sign in</button>
                <button class="btn btn-lg btn-primary btn-block btn-signin" id="registerButton">Register</button>
           
            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div>
        </div>
        </div>

<div class="dashboard">
<div class="container">
        <h1 id = "title"></h1>
        <div class = "row" id="tweetrow">
                
                <div class="row">
                    <input type="text" id="tweetTextbox">
                    </input>
                </div>
                
                <div class="tweetBtnrow">
                    <button id="tweetButton">Tweet</button>
                </div>
                

                <div class="row">
                    <input type="text" id="followinput">
                    </input>
                </div>
                
                <div class="followBtnrow">
                    <button id="followButton">Follow</button>
                </div>

        </div>

        <div class ="row" id="displayRow">
            <div class= "col-md-9" id="tweetDisplay">
            <h3>Tweets: </h3>
            </div>

            <div class= "col-md-3" id="mentionsDisplay">
            <h3>Mentions: </h3>
            </div>
            
        </div>

        <div class="row" id="followRow">
                <div class="col-md-6" id="followersDisplay">
                    <h3>Followers:</h3>
                </div>

                <div class="col-md-6" id="followingDisplay">
                    <h3>Following: </h3>
                </div>
        </div>

        <div class= "row" id="searchBarRow">
             <div class="col-md-6" id="searchBarCol">
                    <input type ="text" id="searchBar" />
                    <button id="searchQueryButton">Search for Tweets</button>
                </div>
            <div class= "col-md-6" id="searchResults">
            <h3>Search Results: </h3>
            </div>

        </div>
</div>
</div>